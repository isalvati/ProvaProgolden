<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="progolden.agenda.entidades.Endereco" table="endereco">
      <meta attribute="class-description">
         Tabela endereco
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="rua" column="rua" type="string"/>
      <property name="bairro" column="bairro" type="string"/>
      <property name="telefone" column="telefone" type="string"/>
      <property name="id_pessoa" column="id_pessoa" type="integer"/>
   </class>
</hibernate-mapping>